content-type: application/json

{
  "query": {
    "simple_query_string": {
      "fields": ["text", "title", "description", "name"],
      "default_operator": "or",
      "query": "zoek"
    }
  },
  "size": 10,
  "_source": {
    "includes": [
      "*"
    ],
    "excludes": []
  },
  "from": 0,
  "sort": [
    {
      "_score": {
        "order": "desc"
      }
    }
  ]
}


